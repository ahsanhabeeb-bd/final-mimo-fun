<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/home_top_bg_3"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/related_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="Related"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/related_id_view"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/related_under"
                android:visibility="invisible"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/hot_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="Hot"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/hot_id_view"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/related_under"
                android:visibility="visible"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/scarse_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/serch_icon_1" />

        <ImageView
            android:id="@+id/live_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/live_icon_1"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            android:background="#20FFFFFF"
            android:elevation="10dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:iss_period="1500"
                app:iss_auto_cycle="true"
                app:iss_delay="2000"
                app:iss_title_background="@color/white"
                app:iss_corner_radius="30"





                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <GridLayout
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"


        >








        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/ladis6"
            app:shapeAppearanceOverlay="@style/image_round"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/ladis4"
            app:shapeAppearanceOverlay="@style/image_round"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/ladis4"
            app:shapeAppearanceOverlay="@style/image_round"
            />




    </GridLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:layout_gravity="center"
        />






        </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/home_bottom_bg3"
        android:weightSum="4"

        >

        <ImageView
            android:id="@+id/home1"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/home_icon_re" />
        <ImageView
            android:id="@+id/game1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/game_icon_re"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/chat1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chat_icon_re"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/profile1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_icon_2_re"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />




    </LinearLayout>

</LinearLayout>