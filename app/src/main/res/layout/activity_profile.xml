<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/add_photo2" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo_round"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#ECF1F1"
                android:src="@drawable/add_photo2"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/bach"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/blue_batch_re"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp"
            android:visibility="visible"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="160dp"
                android:fontFamily="@font/amarante"
                android:text="name"
                android:textColor="#CC0C0D12"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="20dp"
            app:cardCornerRadius="40dp"
            android:elevation="10dp"
            android:background="@drawable/label_back_1"
            android:orientation="horizontal"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/male_sign"
                />
            <TextView
                android:id="@+id/age1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:layout_marginLeft="5dp"
                android:textColor="#0C2860"
                android:textStyle="bold"
                android:textSize="15sp"

                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="20dp"
                app:cardCornerRadius="40dp"
                android:elevation="10dp"
                android:background="@drawable/lable_back_2"
                android:orientation="horizontal"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                >
                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:lottie_rawRes="@raw/heard_for_label"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/sendin_lavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_marginLeft="5dp"
                    android:textColor="#200101"
                    android:textStyle="bold"
                    android:textSize="15sp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="20dp"
                app:cardCornerRadius="40dp"
                android:elevation="10dp"
                android:background="@drawable/label_back_3"
                android:orientation="horizontal"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                >
                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:lottie_rawRes="@raw/star_1_for_label"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/receving_lavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:layout_marginLeft="5dp"
                    android:textColor="#191917"
                    android:textStyle="bold"
                    android:textSize="15sp"

                    />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="20dp"
            app:cardCornerRadius="40dp"
            android:elevation="10dp"
            android:background="@drawable/lable_back_4"
            android:orientation="horizontal"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:layout_marginLeft="5dp"
                android:textColor="#050505"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/uid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000000"
                android:layout_marginLeft="5dp"
                android:textColor="#050505"
                android:textStyle="bold"
                android:textSize="15sp"

                />

        </LinearLayout>



    </FrameLayout>

</LinearLayout>